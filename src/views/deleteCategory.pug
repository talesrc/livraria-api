doctype html
html
    head
        title Remover Categoria
        link(rel='stylesheet' href='/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        header
            h1 
                a.home(href="/admin/Home") LIVRARIA UEBITCHU

        h2 REMOVER CATEGORIA

        form(method='POST', action=`/category/delete/`)
            label Id:
            input.form-control(name='id', type='text', value=category.id, readonly, required)
            label Nome:
            input.form-control(name='name', type='text', value=category.name, readonly, required)
            br
            input.btn.btn-primary(type='submit',value='Submit')